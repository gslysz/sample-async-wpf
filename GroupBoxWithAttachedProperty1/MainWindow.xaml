<Window x:Class="GroupBoxWithAttachedProperty1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupBoxWithAttachedProperty1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">


    <Grid>

        <GroupBox Header="GroupBox1" BorderThickness="2" BorderBrush="Orange"  >
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <StackPanel Orientation="Horizontal" >
                            <Image Height="40" VerticalAlignment="Center" Source="{StaticResource GearResource}"></Image>
                            <TextBlock VerticalAlignment="Center" Text="YoYoYo"></TextBlock>
                            <TextBlock VerticalAlignment="Center" Text="YoYoYo"></TextBlock>
                            <TextBlock VerticalAlignment="Center" Text="YoYoYo"></TextBlock>
                            <TextBlock VerticalAlignment="Center" Text="YoYoYo"></TextBlock>
                            
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </GroupBox.HeaderTemplate>
        </GroupBox>

    </Grid>
</Window>
